<h1>単語帳</h1>

<%= form_with url: tests_path, local: true do |f| %>

<h3>問題</h3>
  <%= @question.question %>
  <%= f.hidden_field :correct_question, value: @question.id %>

<h6>[類義語]</h6>
  <% @question.question_similars.each do |similar|%>
    <%= similar.similar_word%>
  <% end %>

<h3>解答</h3>

  <% @descriptions.each do |descript|%>
  <%= f.radio_button :question, value: descript.id %>
  <%= descript.description %><br>
  <% end %>

<%= f.submit "送信" %>
<% end %>

