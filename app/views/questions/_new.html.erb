<%= form_with model: @question, local: true do |f| %>

<div class="form-group">
  <%= f.label :登録する単語 %><br>
  <%= f.text_field :question, class:"form-control" %>
</div>

<div class="form-group">
  <%= f.label :単語の説明 %><br>
  <%= f.text_area :description, class:"form-control" %>
</div>

<div class="form-group form_similar">
  <%= f.fields_for :question_similars do |i| %>
    <div data-index="<%= i.index %>" class="js-field_group">
      <%= i.label :類義語の登録, class:"js_file" %>
      <span class="add-to" id="similar_box">追加<span>
      <%= i.text_field :similar_word, class:"form-control js_file" %><br>
    </div>
  <% end %>
</div>


<div>
  <%= f.submit "単語登録", class:"btn btn-primary"%>
</div>


<% end %>

<div>
  <%= link_to "戻る", questions_path%>
</div>