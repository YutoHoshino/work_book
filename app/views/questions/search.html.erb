<h1>単語検索</h1>

<%= form_with url: search_questions_path, method: :get, local: true do |f| %>
  <%= f.label :search, '検索' %>
  <%= f.text_field :search %>
  <%= f.submit 'Search' %>
<% end %>




  <table class="table">
  <tr>
    <th scope="col">登録単語</th>
    <th scope="col">単語の説明</th>
    <th scope="col">修正</th>
    <th scope="col">削除</th>
    <th scope="col">類義語を追加</th>
  </tr>

  <% @questions.each do |question| %>
  <tr>
      <th scope="row"><%= link_to "#{question.question}", question_path(question.id) %></th>
      <td><%= link_to "#{question.description}", question_path(question.id) %></td>
      <td><%= link_to "修正する", edit_question_path(question.id) %></td>
      <td><%= link_to "削除する", "/questions/#{question.id}", method: :delete %></td>
      <td><%= link_to "類義語を追加", new_question_question_similar_path(question.id) %></td>
  </tr>
  <% end %>
  </table>
    
  
<div>
  <%= link_to "戻る", questions_path %>
</div>