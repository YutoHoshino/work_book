<h1>ユーザー作成画面</h1>
<%= render 'layouts/error_messages', model:  @user %>
<%= form_with model: @user, local: true do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div>
    <%= f.submit "sign up"%>
  </div>
  <%= link_to "login", login_path %>

<% end %>